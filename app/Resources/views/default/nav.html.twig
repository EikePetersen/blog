<div class="topline"></div>

<nav>
    {% image '@AppBundle/Resources/public/images/logo.svg' %}
        <img src="{{ asset_url }}" alt=""/>
    {% endimage %}
    <ul>
        {% if app.request.get('_route') == 'home' %}
            <li><a href="{{ path('home') }}" class="active">Home</a></li>
        {% else %}
            <li><a href="{{ path('home') }}">Home</a></li>
        {% endif %}

        {% if app.request.get('_route') == 'article' %}
            <li><a href="{{ path('article') }}" class="active">Beiträge</a></li>
        {% else %}
            <li><a href="{{ path('article') }}">Beiträge</a></li>
        {% endif %}
        <li><a>Sonstiges</a>
            <ul>
                <li><a href="{{ path('page', {'type': "impressum"}) }}">Impressum</a></li>
                <li><a href="{{ path('page', {'type': "about"}) }}">&Uuml;ber uns</a></li>
            </ul>
        </li>
        {% if is_granted("ROLE_SUPER_ADMIN") %}
            <li><a href="{{ path('admin') }}">Admin-Bereich</a></li>
        {% endif %}
        {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}

            {% if app.request.get('_route') == 'fos_user_security_logout' %}
                <li><a href="{{ path('fos_user_security_logout') }}" class="active">Logout</a></li>
            {% else %}
                <li><a href="{{ path('fos_user_security_logout') }}">Logout</a></li>
            {% endif %}

        {% else %}
            {% if app.request.get('_route') == 'fos_user_security_login' %}
                <li><a href="{{ path('fos_user_security_login') }}" class="active">Login</a></li>
            {% else %}
                <li><a href="{{ path('fos_user_security_login') }}">Login</a></li>
            {% endif %}
        {% endif %}

    </ul>
</nav>